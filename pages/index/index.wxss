.container {
  height: 100vh;
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
  /* 适配安全区域，避免内容被底部导航栏遮挡 */
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  /* 毛玻璃效果：半透明白色背景 + 高斯模糊 */
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  /* 底部微阴影，移除生硬下划线 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.02);
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  /* 确保与右侧胶囊按钮视觉高度一致 */
  position: relative;
}

.navbar-title-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  letter-spacing: 2rpx;
  text-align: center;
  /* 确保标题完美居中 */
  position: relative;
  line-height: 1.2;
  margin-bottom: 4rpx;
}

.navbar-status {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  line-height: 1.4;
  font-weight: 400;
  /* 不抢视觉焦点：小字号、淡色 */
  opacity: 0.8;
  margin-top: 2rpx;
}

/* 标题淡入动画 */
.navbar-title.animate-title-fade-in,
.navbar-status.animate-title-fade-in {
  animation: titleFadeInUp 0.3s ease-out forwards;
}

@keyframes titleFadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.map-wrapper {
  position: relative;
  width: 100%;
  height: 50vh;
  min-height: 400rpx;
  max-height: 500rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  /* 确保地图可见 */
  overflow: hidden;
}

.map-container {
  width: 100%;
  height: 100%;
  /* 应急工具场景优化：降低非关键元素干扰 */
  position: relative;
}

/* 为推荐厕所标记添加呼吸动画效果 */
/* 注意：微信小程序 map 组件的 marker 不支持直接 CSS 动画 */
/* 可以通过以下方式实现：
   1. 使用自定义图标，在图标设计时添加呼吸效果
   2. 使用 callout 的动画效果
   3. 在地图上方叠加一个动画层（不推荐，会影响交互）
*/

/* 如果使用自定义图标，可以在图标文件中设计呼吸动画效果 */
/* 或者通过定期更新 marker 的 alpha 值来模拟呼吸效果 */

.location-btn {
  position: absolute;
  width: 88rpx;
  height: 88rpx;
  min-width: 88rpx;
  min-height: 88rpx;
  /* 纯白半透明背景 */
  background-color: rgba(255, 255, 255, 0.9);
  /* 正圆形 */
  border-radius: 50%;
  /* 移除边框 */
  border: none;
  /* 使用Flexbox确保图标完美居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  /* 明显的圆形投影，悬浮感 */
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12), 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  /* 确保点击区域足够大 */
  touch-action: manipulation;
  /* 适配不同设备 */
  box-sizing: border-box;
  /* 毛玻璃效果增强质感 */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  /* 点击动画 */
  transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
}

.location-btn-left {
  left: 30rpx;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.location-btn-right {
  right: 30rpx;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.location-btn:active {
  background-color: rgba(255, 255, 255, 0.95);
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15), 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.location-icon {
  font-size: 44rpx;
  display: block;
  /* 确保图标完美居中 */
  line-height: 1;
  text-align: center;
  /* 图标颜色调整 */
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}

.location-icon-user {
  /* 用户定位图标 - 蓝色调 */
  filter: hue-rotate(200deg) saturate(1.3) brightness(0.85) drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}

.location-icon-toilet {
  /* 厕所定位图标 - 橙红色调 */
  filter: hue-rotate(350deg) saturate(1.3) brightness(0.9) drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.1));
}

.toilet-card {
  background-color: #fff;
  margin: 0;
  margin-bottom: 10rpx;
  padding: 40rpx 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  flex: 1;
  overflow-y: auto;
  /* 使用更灵活的布局，适配不同屏幕 */
  max-height: calc(100vh - 50vh - 280rpx);
  min-height: 200rpx;
  box-sizing: border-box;
  /* 优化滚动性能 */
  -webkit-overflow-scrolling: touch;
  /* 移除生硬边框 */
  border: none;
  /* Flexbox垂直居中内容 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 相对定位，用于推荐标签定位 */
  position: relative;
}

/* FadeInUp 动画 */
.toilet-card.animate-fade-in-up {
  animation: fadeInUp 0.4s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 推荐/优先标签（非强视觉） */
.toilet-recommend-badge {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  z-index: 1;
}

.recommend-badge-text {
  font-size: 20rpx;
  color: #999;
  background-color: #F5F5F5;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 400;
  opacity: 0.7;
}

/* 行动信息组：步行时间、距离（导航决策核心） */
.toilet-action-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.walking-time-wrapper {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.walking-time-icon {
  font-size: 32rpx;
  line-height: 1;
}

.walking-time-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #1A1A1A;
  line-height: 1;
}

.walking-time-label {
  font-size: 24rpx;
  color: #666;
  line-height: 1;
  margin-left: 4rpx;
}

.distance-info {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.distance-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  line-height: 1;
}

.distance-unit {
  font-size: 22rpx;
  color: #999;
  line-height: 1;
}

/* 地点描述组：名称、地址、类型、评分、设施等 */
.toilet-location-group {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 名称行：名称 + 类型标签 */
.toilet-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0;
}

.toilet-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  flex: 1;
  margin-right: 12rpx;
  /* 防止文字溢出 */
  word-break: break-word;
  overflow-wrap: break-word;
}

.toilet-type-tag {
  font-size: 20rpx;
  color: #4A90E2;
  background-color: #E8F4FD;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 辅助信息：评分、设施（可选显示） */
.toilet-extended-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 0;
  flex-wrap: wrap;
}

.toilet-facilities {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.facility-tag {
  font-size: 20rpx;
  color: #666;
  background-color: #F5F5F5;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  white-space: nowrap;
}

/* 地址信息（弱化处理） */
.toilet-address-row-weak {
  display: flex;
  align-items: center;
  margin-bottom: 0;
  opacity: 0.6;
}

.address-icon-weak {
  font-size: 20rpx;
  color: #999;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.address-text-weak {
  flex: 1;
  font-size: 22rpx;
  color: #999;
  line-height: 1.5;
  /* 单行省略号 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 标签组（可选显示） */
.toilet-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 0;
}

.toilet-tag {
  font-size: 22rpx;
  color: #333;
  background-color: #F0F0F0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  line-height: 1.4;
  white-space: nowrap;
  font-weight: 500;
}

/* 信任提示：轻量级，不干扰主流程 */
.toilet-trust-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  opacity: 0.5;
}

.trust-hint-text {
  font-size: 20rpx;
  color: #999;
  line-height: 1.4;
  font-weight: 400;
}

.toilet-rating {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  margin-bottom: 0;
}

.rating-stars {
  display: flex;
  margin-right: 20rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
  margin-right: 5rpx;
}

.star.filled {
  color: #ffd700;
}

.rating-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.toilet-comments {
  margin-top: 20rpx;
}

.comments-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.6;
}

.comment-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 30rpx 50rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  z-index: 1000;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  line-height: 1.6;
}

/* 操作按钮区域 - 应急场景优化 */
.action-buttons {
  display: flex;
  padding: 24rpx 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background-color: rgba(255, 255, 255, 0.95);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  gap: 16rpx;
  margin-bottom: 0;
  /* 适配安全区域 */
  box-sizing: border-box;
  /* 确保按钮区域不被遮挡 */
  position: relative;
  z-index: 10;
  /* 毛玻璃效果 */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 主按钮：立即导航（右侧，视觉权重最高） */
/* 符合微信设计规范：简洁、克制、可点击感 */
.action-btn-primary {
  flex: 1.5;
  height: 100rpx;
  min-height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  color: #FFFFFF;
  /* 微信规范：使用轻微渐变，不浮夸 */
  background: linear-gradient(135deg, #FF6B6B 0%, #FF4757 100%);
  /* 优化按钮点击 */
  touch-action: manipulation;
  /* 确保按钮文字居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  /* 移除默认样式 */
  padding: 0;
  margin: 0;
  /* 微信规范：轻微阴影，增强可点击感但不浮夸 */
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.25), 0 2rpx 6rpx rgba(255, 107, 107, 0.15);
  transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  /* 应急场景：确保按钮足够大，易于紧急点击 */
  min-width: 200rpx;
  /* 微信规范：添加轻微内阴影，增强立体感 */
  position: relative;
}

/* 微信规范：点击反馈，轻微下沉效果 */
.action-btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3), 0 1rpx 4rpx rgba(255, 107, 107, 0.2);
  background: linear-gradient(135deg, #FF5252 0%, #FF3838 100%);
}

.action-btn-primary[disabled] {
  background: #E0E0E0;
  color: #999;
  box-shadow: none;
  opacity: 0.5;
}

/* 次按钮：换一个（左侧，弱化处理） */
.action-btn-secondary {
  flex: 1;
  height: 88rpx;
  min-height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #E0E0E0;
  color: #666;
  background: #FFFFFF;
  /* 优化按钮点击 */
  touch-action: manipulation;
  /* 确保按钮文字居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  /* 移除默认样式 */
  padding: 0;
  margin: 0;
  /* 弱化处理：轻微阴影，不抢焦点 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.15s ease, border-color 0.15s ease, background 0.15s ease;
}

.action-btn-secondary:active {
  transform: scale(0.97);
  border-color: #D0D0D0;
  background: #F8F8F8;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.action-btn-secondary[disabled] {
  background: #F5F5F5;
  color: #CCC;
  border-color: #E8E8E8;
  box-shadow: none;
  opacity: 0.6;
}

.ad-container {
  width: 100%;
  min-height: 200rpx;
  background-color: #F8F9FA;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  /* 广告内容可以在这里插入 */
  /* 适配安全区域 */
  position: relative;
  border-radius: 16rpx 16rpx 0 0;
}

.custom-toast {
  position: fixed;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.75);
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  z-index: 9999;
  animation: toastFadeIn 0.3s ease-in;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  max-width: 80%;
  text-align: center;
  box-sizing: border-box;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.toast-text {
  color: #fff;
  font-size: 24rpx;
  line-height: 1.6;
}

@keyframes toastFadeIn {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

